# Discord bot credentials
BOT_TOKEN=your_bot_token_here              # Token del bot de Discord
COMMAND_PREFIX=;                           # Prefijo para los comandos basados en mensajes

# MySQL database configuration
DB_HOST=localhost                          # Host de la base de datos MySQL
DB_PORT=3306                               # Puerto de conexión MySQL
DB_USER=dedos_bot                          # Usuario con permisos de lectura/escritura
DB_PASSWORD=super_segura                   # Contraseña del usuario de base de datos
DB_NAME=dedos_utilities                    # Nombre de la base de datos
DB_POOL_LIMIT=10                           # Máximo de conexiones simultáneas

# Logging configuration
LOG_LEVEL=info                             # Nivel de logs en consola (error, warn, info, debug)
LOG_FILE_LEVEL=debug                       # Nivel de logs almacenados en archivo
LOG_DIRECTORY=logs                         # Carpeta donde se guardan los logs
LOG_MAX_FILES=14d                          # Tiempo de retención de archivos de log

# Verification & welcome settings
VERIFIED_ROLE_ID=000000000000000000        # Rol que se otorga tras verificar
VERIFICATION_CHANNEL_ID=000000000000000000 # Canal donde se ejecuta la verificación manual
INVITE_CHANNEL_ID=000000000000000000       # Canal con invitaciones permanentes
WELCOME_RATE_MS=1500                       # Retardo entre mensajes de bienvenida
WELCOME_CONCURRENCY=1                      # Mensajes de bienvenida procesados simultáneamente
WELCOME_MAX_QUEUE=5000                     # Límite de cola de bienvenidas
WELCOME_GIF=dedosgif.gif                   # Ruta al gif obligatorio del servidor

# Warn system configuration
WARN_EMBED_COLOR=0x5000ab                  # Color de los embeds de moderación
WARN_GIF_URL=https://example.com/fallback.gif        # Gif de respaldo si falta el archivo local
VERBAL_WARN_GIF_URL=https://example.com/verbal.gif   # Gif alternativo para advertencias verbales
WARN_HISTORY_PAGE_SIZE=6                   # Número máximo de warns mostrados en el historial

# Event configuration
EVENT_ROLE_ID=000000000000000000           # Rol que se asigna al unirse a eventos
EVENTS_CHANNEL_ID=000000000000000000       # Canal donde se publica el panel del evento
EVENT_SESSION_NAME=Evento de actividad     # Nombre base para las sesiones en la base de datos
EVENT_REQUIRED_TAG=[Dedos]                 # Cadena obligatoria en el nickname de los participantes
EVENT_VERIFICATION_INTERVAL_MINUTES=60     # Minutos entre chequeos automáticos de verificación
EVENT_VERIFICATION_CONTROL_CHANNEL_ID=000000000000000000 # Canal de logs para sanciones automáticas
EVENT_REMINDER_CHANNEL_IDS=                # IDs de canales (separados por comas) donde se generan recordatorios
EVENT_REMINDER_COOLDOWN_MINUTES=720        # Tiempo mínimo entre recordatorios automáticos
EVENT_REMINDER_MESSAGE_THRESHOLD=1         # Mensajes necesarios para disparar un recordatorio
EVENT_REMINDER_GIF_URL=https://example.com/event.gif     # Gif de respaldo para recordatorios
EVENT_REMINDER_JOIN_LABEL=Ir al evento     # Texto del botón para volver al panel del evento
EVENT_REMINDER_STOP_LABEL=No volver a recordar # Texto del botón para dejar de recibir recordatorios

# Tickets configuration
TICKET_PANEL_CHANNEL_ID=000000000000000000 # Canal donde vive el panel de tickets
TICKET_CATEGORY_ID=000000000000000000      # Categoría donde se crearán los tickets
TICKET_SUPPORT_ROLE_IDS=000000000000000000 # Roles con permisos para atender tickets (IDs separados por comas)
TICKET_MAX_PER_USER=1                      # Tickets simultáneos permitidos por usuario
TICKET_COOLDOWN_MS=3000                    # Tiempo mínimo entre la creación de tickets

# Branding & URLs
GUILD_URL=https://discord.gg/dedos          # Enlace permanente del servidor
HELP_URL=https://discord.gg/dedos           # URL usada en ayudas o recordatorios
BRAND_ICON=https://example.com/icon.png     # Icono usado en embeds globales

# Optional currency settings
MXN_USD_RATE=0                              # Tipo de cambio manual (0 para deshabilitar)
